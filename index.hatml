  <script>
    // ============================
    // CONFIG (edite aqui)
    // ============================
    const STORE = {
      name: "Adriele Makes",
      whatsappNumberE164: "5598985356804", // <<< Troque pelo n√∫mero certo (55 + DDD + n√∫mero)
      whatsappDisplay: "+55 (98) 98535-6804", // s√≥ visual
      currency: "BRL",
      accentTag: "Destaque",
      disclaimer: "Frete calculado no WhatsApp. Prazos variam por regi√£o."
    };

    const PRODUCTS = [
      { id:"kit-glow", name:"Kit Glow Completo", desc:"Base + corretivo + blush + gloss. Look leve e iluminado.", category:"kits", price:149.90, oldPrice:199.90, icon:"‚ú®", badge:"hot" },
      { id:"kit-olhar", name:"Kit Olhar Marcante", desc:"M√°scara + delineador + sombra. Para olhar poderoso.", category:"kits", price:119.90, oldPrice:159.90, icon:"üëÅÔ∏è", badge:"hot" },
      { id:"kit-boca", name:"Kit Boca Perfeita", desc:"Gloss + batom + l√°pis contorno. Conforto e defini√ß√£o.", category:"kits", price:89.90, oldPrice:119.90, icon:"üíã", badge:"hot" },
      { id:"base-velvet", name:"Base Velvet (Alta Cobertura)", desc:"Acabamento aveludado e confort√°vel (exemplo).", category:"pele", price:59.90, oldPrice:79.90, icon:"üß¥", badge:"" },
      { id:"corretivo-fresh", name:"Corretivo Fresh", desc:"Cobertura natural para olheiras e imperfei√ß√µes (exemplo).", category:"pele", price:29.90, oldPrice:39.90, icon:"ü´ß", badge:"" },
      { id:"blush-sun", name:"Blush Sun (Efeito Sa√∫de)", desc:"F√°cil de esfumar e pigmenta√ß√£o na medida (exemplo).", category:"pele", price:34.90, oldPrice:44.90, icon:"üå∏", badge:"" },
      { id:"mascara-volume", name:"M√°scara Volume", desc:"Mais volume sem empelotar (exemplo).", category:"olhos", price:39.90, oldPrice:49.90, icon:"üëÅÔ∏è‚Äçüó®Ô∏è", badge:"" },
      { id:"delineador-black", name:"Delineador Black", desc:"Tra√ßo preciso e secagem r√°pida (exemplo).", category:"olhos", price:24.90, oldPrice:34.90, icon:"üñäÔ∏è", badge:"" },
      { id:"gloss-glow", name:"Gloss Glow", desc:"Brilho lindo sem grudar (exemplo).", category:"boca", price:22.90, oldPrice:29.90, icon:"üíé", badge:"" },
      { id:"batom-matte", name:"Batom Matte", desc:"Confort√°vel e dur√°vel (exemplo).", category:"boca", price:27.90, oldPrice:35.90, icon:"üíÑ", badge:"" },
      { id:"pincel-kit", name:"Kit de Pinc√©is (5 un.)", desc:"Essenciais para aplica√ß√£o impec√°vel (exemplo).", category:"acessorios", price:49.90, oldPrice:69.90, icon:"üñåÔ∏è", badge:"" }
    ];

    // ============================
    // Helpers
    // ============================
    const byId = (id) => document.getElementById(id);
    const money = (value) => value.toLocaleString("pt-BR", { style:"currency", currency: STORE.currency });

    const loadCart = () => {
      try { return JSON.parse(localStorage.getItem("adriele_cart") || "{}"); }
      catch { return {}; }
    };
    const saveCart = (cart) => localStorage.setItem("adriele_cart", JSON.stringify(cart));

    const cartCount = (cart) => Object.values(cart).reduce((a,b)=>a+b,0);
    const cartSubtotal = (cart) =>
      Object.entries(cart).reduce((sum,[id,qty])=>{
        const p = PRODUCTS.find(x=>x.id===id);
        return sum + (p ? p.price * qty : 0);
      },0);

    // ============================
    // Render Products
    // ============================
    function renderProducts(list){
      const grid = byId("productGrid");
      grid.innerHTML = "";

      if(!list.length){
        grid.innerHTML = `<div class="card product" style="grid-column:1/-1">
          <strong>Nenhum produto encontrado.</strong>
          <p class="muted">Tente outro termo ou selecione outra categoria.</p>
        </div>`;
        return;
      }

      for(const p of list){
        const el = document.createElement("article");
        el.className = "card product";
        el.innerHTML = `
          <div class="product__top">
            <div>
              <h3 class="product__title">${p.icon} ${p.name}</h3>
              <div class="muted small">${p.category.toUpperCase()}</div>
            </div>
            <span class="tag ${p.badge==="hot" ? "hot" : ""}">${p.badge==="hot" ? "Promo" : STORE.accentTag}</span>
          </div>
          <p class="product__desc">${p.desc}</p>
          <div class="product__bottom">
            <div class="product__price">
              ${p.oldPrice ? `<div class="priceOld">${money(p.oldPrice)}</div>` : ``}
              <div class="price">${money(p.price)}</div>
            </div>
            <button class="btn btn--primary" data-add="${p.id}">Adicionar üõí</button>
          </div>
        `;
        grid.appendChild(el);
      }
    }

    function applyFilters(){
      const q = (byId("search").value || "").trim().toLowerCase();
      const cat = byId("category").value;
      const sort = byId("sort").value;

      let list = [...PRODUCTS];

      if(cat !== "all") list = list.filter(p => p.category === cat);
      if(q) list = list.filter(p => (p.name + " " + p.desc).toLowerCase().includes(q));

      if(sort === "low") list.sort((a,b)=>a.price-b.price);
      if(sort === "high") list.sort((a,b)=>b.price-a.price);
      if(sort === "name") list.sort((a,b)=>a.name.localeCompare(b.name,"pt-BR"));

      renderProducts(list);
    }

    // ============================
    // Cart
    // ============================
    let CART = loadCart();

    function updateCartUI(){
      const count = cartCount(CART);
      byId("cartCount").textContent = String(count);
      byId("cartSub").textContent = `${count} item(ns)`;
      byId("cartTotal").textContent = money(cartSubtotal(CART));

      const wrap = byId("cartItems");
      wrap.innerHTML = "";

      const entries = Object.entries(CART);
      if(!entries.length){
        wrap.innerHTML = `
          <div class="card" style="padding:14px;">
            <strong>Seu carrinho est√° vazio.</strong>
            <p class="muted">Adicione produtos para finalizar no WhatsApp.</p>
          </div>
        `;
        return;
      }

      for(const [id, qty] of entries){
        const p = PRODUCTS.find(x => x.id === id);
        if(!p) continue;

        const row = document.createElement("div");
        row.className = "cartItem";
        row.innerHTML = `
          <div class="cartItem__icon">${p.icon}</div>
          <div class="cartItem__body">
            <div class="cartItem__title">${p.name}</div>
            <div class="cartItem__meta">${money(p.price)} ‚Ä¢ ${p.category}</div>
            <div class="qty">
              <button data-dec="${p.id}" aria-label="Diminuir">‚àí</button>
              <span>${qty}</span>
              <button data-inc="${p.id}" aria-label="Aumentar">+</button>
            </div>
          </div>
          <button class="iconBtn" data-rm="${p.id}" aria-label="Remover">üóëÔ∏è</button>
        `;
        wrap.appendChild(row);
      }
    }

    function addToCart(id){
      CART[id] = (CART[id] || 0) + 1;
      saveCart(CART);
      updateCartUI();
    }
    function inc(id){ CART[id] = (CART[id] || 0) + 1; saveCart(CART); updateCartUI(); }
    function dec(id){
      if(!CART[id]) return;
      CART[id] -= 1;
      if(CART[id] <= 0) delete CART[id];
      saveCart(CART);
      updateCartUI();
    }
    function rm(id){ delete CART[id]; saveCart(CART); updateCartUI(); }
    function clearCart(){ CART = {}; saveCart(CART); updateCartUI(); }

    function openCart(){
      byId("cartDrawer").hidden = false;
      byId("backdrop").hidden = false;
      document.body.style.overflow = "hidden";
    }
    function closeCart(){
      byId("cartDrawer").hidden = true;
      byId("backdrop").hidden = true;
      document.body.style.overflow = "";
    }

    // ============================
    // WhatsApp
    // ============================
    function buildCheckoutMessage(){
      const items = Object.entries(CART)
        .map(([id, qty]) => {
          const p = PRODUCTS.find(x => x.id === id);
          if(!p) return null;
          return `‚Ä¢ ${qty}x ${p.name} ‚Äî ${money(p.price * qty)}`;
        })
        .filter(Boolean);

      const total = money(cartSubtotal(CART));
      const header = `Ol√°! Quero finalizar um pedido na *${STORE.name}* üòä`;
      const body = items.length ? `\n\n*Itens:*\n${items.join("\n")}` : `\n\n(sem itens no carrinho)`;
      const tail = `\n\n*Subtotal:* ${total}\n*Obs:* ${STORE.disclaimer}\n\nPode me informar o valor do frete e as formas de pagamento?`;
      return header + body + tail;
    }

    function openWhatsApp(customText){
      const text = encodeURIComponent(customText || buildCheckoutMessage());
      const url = `https://wa.me/${STORE.whatsappNumberE164}?text=${text}`;
      window.open(url, "_blank", "noopener,noreferrer");
    }

    // ============================
    // Events
    // ============================
    document.addEventListener("click", (e) => {
      const add = e.target.closest("[data-add]");
      const incBtn = e.target.closest("[data-inc]");
      const decBtn = e.target.closest("[data-dec]");
      const rmBtn = e.target.closest("[data-rm]");

      if(add){
        addToCart(add.getAttribute("data-add"));
        openCart();
      }
      if(incBtn) inc(incBtn.getAttribute("data-inc"));
      if(decBtn) dec(decBtn.getAttribute("data-dec"));
      if(rmBtn) rm(rmBtn.getAttribute("data-rm"));
    });

    byId("btnOpenCart").addEventListener("click", openCart);
    byId("btnCloseCart").addEventListener("click", closeCart);
    byId("backdrop").addEventListener("click", closeCart);

    byId("btnCheckout").addEventListener("click", () => {
      if(cartCount(CART) === 0){
        openWhatsApp(`Ol√°! Quero informa√ß√µes sobre produtos na *${STORE.name}* üòä`);
        return;
      }
      openWhatsApp(buildCheckoutMessage());
    });

    byId("btnClear").addEventListener("click", clearCart);

    byId("btnTalk").addEventListener("click", () => {
      openWhatsApp(`Ol√°! Vim pelo site da *${STORE.name}* e queria tirar uma d√∫vida üòä`);
    });
    byId("btnTalk2").addEventListener("click", () => {
      openWhatsApp(`Ol√°! Vim pelo site da *${STORE.name}* e queria tirar uma d√∫vida üòä`);
    });
    byId("fabWhats").addEventListener("click", () => {
      openWhatsApp(`Ol√°! Vim pelo site da *${STORE.name}* üòä`);
    });

    byId("search").addEventListener("input", applyFilters);
    byId("category").addEventListener("change", applyFilters);
    byId("sort").addEventListener("change", applyFilters);

    // Init
    byId("year").textContent = String(new Date().getFullYear());
    byId("phoneText").textContent = STORE.whatsappDisplay;
    applyFilters();
    updateCartUI();
  </script>
